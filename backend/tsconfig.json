{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@src/*": ["src/*"],
      "@auth/*": ["src/auth/*"],
      "@config/*": ["src/config/*"],
      "@docs/*": ["src/docs/*"],
      "@dtos/*": ["src/dtos/*"],
      "@generated/*": ["src/generated/*"],
      "@middleware/*": ["src/middleware/*"],
      "@repositories/*": ["src/repositories/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@tools/*": ["src/tools/*"]
    }
  },
  "include": ["src"]
}
