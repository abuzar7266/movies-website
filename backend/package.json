{
  "name": "movieshelf-backend",
  "private": true,
  "type": "module",
  "version": "0.1.0",
  "engines": {
    "node": ">=20.19.0"
  },
  "vitest": {
    "setupFiles": [
      "./tests/setup.ts"
    ]
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -b",
    "start": "node dist/server.js",
    "typecheck": "tsc -b --noEmit",
    "prisma:generate": "prisma generate",
    "migrate:dev": "prisma migrate dev --name init",
    "db:push": "prisma db push",
    "db:status": "prisma migrate status",
    "seed": "tsx src/tools/seed.ts",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@prisma/client": "7.4.0",
    "argon2": "0.44.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.6",
    "express": "5.2.1",
    "express-rate-limit": "8.2.1",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.3",
    "multer": "2.0.2",
    "pg": "8.18.0",
    "pino": "10.3.1",
    "pino-http": "11.0.0",
    "zod": "4.3.6",
    "@prisma/adapter-pg": "7.4.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "1.4.10",
    "@types/express": "5.0.6",
    "@types/cors": "2.8.19",
    "@types/supertest": "6.0.3",
    "@types/jsonwebtoken": "9.0.10",
    "pino-pretty": "13.1.3",
    "@types/multer": "2.0.0",
    "prisma": "7.4.0",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "2.1.3",
    "supertest": "6.3.4"
  }
}
